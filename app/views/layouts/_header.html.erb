<header class>
  <div class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <nav class='nav navbar-nav navbar-left' >
        <span>Bookers</span>
      </nav>
      <nav>
        <ul class="nav navbar-nav navbar-right ">
          <% if user_signed_in? %>
            <li><%= link_to ' Home', user_path(current_user), class: "fas fa-home" %></li>
            <li><%= link_to ' Users', users_path, class: 'fas fa-users' %></li>
            <li><%= link_to ' Books', books_path, class: 'fas fa-book-open'%></li>
            <li><%= link_to ' logout', destroy_user_session_path, method: :delete, class: 'fas fa-sign-out-alt' %></li>
          <% else %>
            <li><%= link_to ' Home', root_path, class: 'fas fa-home' %></li>
            <li><%= link_to ' About', about_path, class: 'fas fa-link' %></li>
            <li><%= link_to ' sign up', new_user_registration_path, class: 'fas fa-user-plus' %></li>
            <li><%= link_to ' login', new_user_session_path, class: 'fas fa-sign-in-alt'%></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
<div class="form-horizontal" role="form">
  <% if user_signed_in? %>
    <div class="search_form form-inline">
      <%= form_tag(search_path, method: :get) do %>
        <%= text_field_tag (:content) %>
        <%= select_tag 'model', options_for_select({"User" => "user", "Book" => "book"}), class: 'col-xs-2 form-control' %>
        <%= select_tag 'how', options_for_select({"完全一致" => "match","前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partical"}), class: 'col-xs-2 form-control'  %>
        <%= submit_tag '検索' %>
      <% end %>
    </div>
  <% end %>
</div>
