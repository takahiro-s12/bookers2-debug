
<table class="table">
  <% if @model == 'book' %>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
    <% @book.each do |book| %>
    <tr>
      <td>
        <%= link_to(book.user) do %>
          <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
        <% end %>
      </td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td></td>
    </tr>
    <% end %>
  <% else %>
    <tr>
      <th></th>
      <th>image</th>
      <th>name</th>
      <th colspan="8"></th>
    </tr>
    <% @user.each do |user| %>
      <tr>
        <td></td>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
        <td><%= user.name %></td>
        <td></td>
      </tr>
    <% end %>
  <% end %>
</table>